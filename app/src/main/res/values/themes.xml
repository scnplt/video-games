<resources>

    <style name="Theme.VideoGames" parent="Theme.VideoGames.Light" />

    <style name="Theme.VideoGames.Light" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Color -->
        <item name="colorPrimary">@color/grey_700</item>
        <item name="colorPrimaryVariant">@color/grey_800</item>
        <item name="colorOnPrimary">@color/white_50</item>

        <item name="colorSecondary">@color/orange_500</item>
        <item name="colorSecondaryVariant">@color/orange_400</item>
        <item name="colorOnSecondary">@color/black_900</item>

        <item name="colorSurface">@color/white_50</item>
        <item name="colorOnSurface">@color/black_900</item>

        <item name="android:colorBackground">@color/grey_50</item>
        <item name="colorOnBackground">@color/black_900</item>

        <item name="scrimBackground">@color/white_50_alpha_60</item>
        <item name="android:statusBarColor">@color/grey_50_alpha_60</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>

        <!-- Style -->
        <item name="bottomNavigationStyle">
            @style/Widget.MaterialComponents.BottomNavigationView.Colored
        </item>

        <!-- Other -->
        <item name="android:windowLightStatusBar">?attr/colorOnSurface</item>

    </style>

</resources>
